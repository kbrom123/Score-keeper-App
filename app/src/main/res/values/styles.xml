<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight.DarkActionBar">
    </style>
    <style name="ScoreButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="color">@color/teal_700</item>
    </style>
    <style name="PlusButton" parent="ScoreButton">
        <item name="android:src">@drawable/baseline_add_24</item>
        <item name="android:contentDescription">@string/add_button</item>
    </style>
    <style name="MinusButton" parent="ScoreButton">
        <item name="android:src">@drawable/baseline_minimize_24</item>
        <item name="android:contentDescription">@string/minus_button</item>
    </style>

    <style name="ScoreText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display3</item>

    </style>
    <style name="TeamText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>
</resources>